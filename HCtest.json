{   
    // tight binding model
    "model": "TBhydrocarbons",

    // atomic geometry
    "gy_file": "polyacetylene.csv",

    // magnetic field
    "so_eB": [0.0, 0.0, 0.0],

    // electronic temperature in eV
    "el_kT": 0.025,
    // the tolerance in finding the chemical potential
    "mu_tol": 1e-14,
    // max number of bisections when finding mu
    "mu_max_loops": 500,

    // self-consistent field parameters
    "scf_on": 1,
    "scf_mix": 0.1,
    "scf_tol": 1.0e-10,
    "scf_max_loops": 500,
    // Pulay mixing alpha
    "alpha": 0.1,

    // number of bins for the density of states
    "dos_nbin": 20,

    // Verbosity
    "verbose": 1,
    "extraverbose": 1,

    // Hamiltonian, "standard", "collinearS", "vectorS", "pcase" or "dcase"
    "Hamiltonian": "standard"
    // Note: remember that there is no comma after the last entry!
}
